script src="https://js.braintreegateway.com/web/dropin/1.15.0/js/dropin.min.js"
javascript:
  var form         = document.getElementById('payment-form');
  var firstName    = document.getElementById('firstName');
  var lastName     = document.getElementById('lastName');
  var addressLine1 = document.getElementById('address1');
  var addressLine2 = document.getElementById('address2');
  var city         = document.getElementById('city');
  var state        = document.getElementById('state');
  var zipcode      = document.getElementById('zipcode');
  var submitBtn    = document.getElementById('submitBtn');
  var client_token = "#{ @client_token }"

  var fields = [
    firstName,
    lastName,
    addressLine1,
    addressLine2,
    city,
    state,
    zipcode,
  ]

  var valid = false

  var qty   = document.getElementById('qty');
  var price = document.getElementById('price');
  var total = document.getElementById('total');

  $("#qty").on('change', function(event){
    console.log("THis fired");
    total.value = event.target.value * price.value
  });

  function validateForm() {
    for (var i = 0; i < fields.length; i++) {
      var field = fields[i]
      if (field.checkValidity()) {
        field.parentNode.classList.add("has-success")
      } else {
        field.parentNode.classList.add("has-error")
      }
    }

    if (!valid){
      submitBtn.disabled = true
    }
  }

  braintree.dropin.create({
    authorization: client_token,
    container: '#bt-dropin',
    paypal: {
      flow: 'checkout'
    }
  }, function (createErr, instance) {
    form.addEventListener('submit', function (event) {
      event.preventDefault();

      validateForm();

      instance.requestPaymentMethod(function (err, payload) {
        if (err) {
          console.log('Error', err);
          return;
        }

        // Add the nonce to the form and submit
        document.querySelector('#nonce').value = payload.nonce;
        form.submit();
      });
    });
  });
