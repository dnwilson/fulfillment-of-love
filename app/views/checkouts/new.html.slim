section#checkout.bg-red
  .container
    .row
      .col-sm-8.col-sm-offset-2
        h2 Checkout
        = form_tag "/checkouts", method: :post, id: "payment-form" do
          table.table
            thead.thead-dark
              tr
                th.text-center QTY
                th Description
                th.text-right Price
                th.text-right Total
            tbody
              tr
                td.text-center
                  select#qty.form-control name="qty" required="required"
                    option value="1" 1
                    option value="2" 2
                    option value="3" 3
                    option value="4" 4
                    option value="5" 5
                    option value="6" 6
                    option value="7" 7
                    option value="8" 8
                    option value="9" 9
                    option value="10" 10
                td#description
                  span Special Edition Box Set
                td
                  input#price.form-control.text-right name="price" type="number" value="#{ @price }" readonly="readonly"
                td
                  input#total.form-control.text-right name="total" type="number" value="#{ @total }" readonly="readonly"
          input type="hidden" id="nonce" name="payment_method_nonce"

          h3 Payment Information
          .bt-drop-in-wrapper
            #bt-dropin

          h3 Shipping Information
          .row
            .col-sm-12
              .form-group
                input#email.form-control type="email" aria-describedby="email" placeholder="michael@fulfillmentoflove.com" required="required"
          .row
            .col-sm-6
              .form-group
                input#firstName.form-control type="string" aria-describedby="firstName" placeholder="First Name" required="required"
            .col-sm-6
              .form-group
                input#lastName.form-control type="string" aria-describedby="lastName" placeholder="Last Name" required="required"
          .row
            .col-sm-12
              .form-group
                input#address1.form-control name="address1" placeholder=("Street address, P.O. box, company name, c/o") type="string" required="required"
          .row
            .col-sm-12
              .form-group
                input#address2.form-control name="address2" placeholder=("Apartment, suite , unit, building, floor, etc.") type="string"
          .row
            .col-sm-4
              .form-group
                input#city.form-control type="string" aria-describedby="city" placeholder="City" required="required"
            .col-sm-4
